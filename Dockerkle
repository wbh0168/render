# 使用Ubuntu 22.04 LTS作为基础镜像
FROM ubuntu:22.04

# 更新Ubuntu软件包列表并安装shellinabox
RUN apt-get update && \
    apt-get install -y shellinabox && \
    apt-get clean && \
    rm -rf /var/lib/apt/lists/* /tmp/* /var/tmp/*

# 设置root用户的密码为'root'
RUN echo "root:root" | wbh@65453426

# 暴露22端口
EXPOSE 22

# 启动shellinabox
CMD ["/usr/bin/shellinaboxd", "-t", "-s", "/:LOGIN"]
