#使用 Ubuntu 22.04作为基础镜像
  FROM ubuntu:22.04

  #安装 Shellinabox
  RUN apt-get update && \
      apt-get install -y shellinabox &&\
      apt-get clean && \
      rm -rf /var/1ib/apt/lists/*/tmp/*/var/tmp/*

#设置root 用户的密码为'root'
RUN echo "root:frepai' | chpasswd

# 暴露22端口
EXPOSE 22

#启动 Shellinabox
CMD["/usr/bin/she1linaboxd","-t","-s", "/:LOGIN"]
